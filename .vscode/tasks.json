// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "compile",
			"command": "npm",
			"args": ["run", "compile"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": {
				"owner": "esbuild",
				"pattern": [
					{
						"regexp": "^([^\\s].*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
						"file": 1,
						"line": 2,
						"column": 3,
						"severity": 4,
						"message": 5
					}
				]
			}
		},
		{
			"type": "shell",
			"label": "watch",
			"command": "npm",
			"args": ["run", "watch"],
			"group": "build",
			"presentation": {
				"reveal": "never"
			},
			"isBackground": true,
			"problemMatcher": {
				"owner": "esbuild",
				"pattern": [
					{
						"regexp": "^([^\\s].*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
						"file": 1,
						"line": 2,
						"column": 3,
						"severity": 4,
						"message": 5
					}
				],
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^\\s*\\[watch\\]",
					"endsPattern": "ðŸ‘€ Watching for changes\\.\\.\\."
				}
			}
		}
	]
}
